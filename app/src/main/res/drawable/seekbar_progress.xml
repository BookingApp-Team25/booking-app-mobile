<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#CCCCCC" /> <!-- Set the background color of the progress bar -->
            <corners android:radius="5dp" /> <!-- Adjust the corner radius as needed -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="#2196F3" /> <!-- Set the color of the progress bar -->
                <corners android:radius="5dp" /> <!-- Adjust the corner radius as needed -->
            </shape>
        </clip>
    </item>
</layer-list>
