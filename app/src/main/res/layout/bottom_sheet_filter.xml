<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filter Options"
        android:textSize="24sp"
        android:textStyle="bold"
        android:paddingBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contents"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <CheckBox
                android:id="@+id/checkBoxFreeWifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free wifi" />

            <CheckBox
                android:id="@+id/checkBoxAirConditioner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Air conditioner" />

            <CheckBox
                android:id="@+id/checkBoxSwimmingPool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Swimming pool" />

            <CheckBox
                android:id="@+id/checkBoxKitchen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kitchen" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <CheckBox
                android:id="@+id/checkBoxStudio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Studio" />

            <CheckBox
                android:id="@+id/checkBoxRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room" />

            <CheckBox
                android:id="@+id/checkBoxApartment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apartment" />

            <CheckBox
                android:id="@+id/checkBoxHouse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="House" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price Range"
        android:textStyle="bold"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp">

        <EditText
            android:id="@+id/editTextMinPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Min price"
            android:inputType="number" />

        <EditText
            android:id="@+id/editTextMaxPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Max price"
            android:inputType="number"
            android:paddingStart="8dp" />
    </LinearLayout>

    <Button
        android:id="@+id/button_apply_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apply Filter" />
</LinearLayout>
