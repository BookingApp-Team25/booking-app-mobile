<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="horizontal"
    android:background="@drawable/border_background"
    android:padding="10dp"
    android:layout_marginVertical="10dp"
    android:id="@+id/accommodation_log_card"
    >

    <ImageView
        android:id="@+id/accommodationLogImage"
        android:layout_width="170dp"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/accommodation1"
        android:contentDescription="@string/accommodation1"
        android:scaleType="fitXY" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/accommodationLogTitle"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:text="@string/accommodation1"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/accommodationLogReservationNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ReservationNumber" />

        <TextView
            android:id="@+id/accommodationLogTotalProfit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TotalProfit" />

        <Button
            android:id="@+id/generateAnnualLogButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate annual log" />

    </LinearLayout>
</LinearLayout>